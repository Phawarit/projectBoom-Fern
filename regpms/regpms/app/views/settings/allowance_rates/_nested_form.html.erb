<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap class="text-center">จำนวนเงิน (บาท)</th>
            <% unless action_name == "show" %>
                <th style="width:30px;"></th>
            <% end %>
        </tr>
    </thead>
    <tbody id="allowance_rate_fields">
        <%= f.simple_fields_for :allowance_rates do |allowance_rate| %>
            <%= render '/settings/allowance_rates/nested_fields', :f => allowance_rate %>
        <% end %>
    </tbody>
    <tbody>
        <% unless action_name == "show" %>
        	<tr>
            	<th colspan="6">
                    <%= link_to_add_association f, :allowance_rates, partial: "/settings/allowance_rates/nested_fields", class: "btn btn-default col-xs-12",
                    "data-association-insertion-node" => "#allowance_rate_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus text-white'></i>
                    <% end %>
            	</th>
        	</tr>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#allowance_rate_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>