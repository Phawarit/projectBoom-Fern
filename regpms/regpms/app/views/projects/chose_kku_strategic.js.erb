$("#project_kku_strategic_id").val("<%= @kku_strategic ? @kku_strategic.id : "" %>");


$("#project_kku_strategic_id").trigger('chosen:updated');

// remove all options
$("#project_kku_tactic_id").empty();
// insert blank option
$("#project_kku_tactic_id").append($('<option></option>'));
// insert new options
<% if @kku_strategic %>
	<% @kku_strategic.kku_tactics.sort_by {|a| a.to_s_sort}.each do |kku_tactic| %>
		$("#project_kku_tactic_id").append($('<option></option>').attr('value', <%= kku_tactic.id %>).text('<%= kku_tactic.to_s_long %>'));
	<% end %>
<% end %>
// chosen update
$("#project_kku_tactic_id").trigger('chosen:updated');
